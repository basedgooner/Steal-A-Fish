                else
                    Rayfield:Notify({
                        Title = "Notification",
                        Content = "No root part found for pet",
                        Duration = 5,
                    })
                end
            end
        else
            Rayfield:Notify({
                Title = "Notification",
                Content = "No pet found",
                Duration = 5,
            })
        end
    end,
})

